# Length of string
# Example
# $ echo -n abc | length
length() {
  read a;
  echo -n $a | wc -c
}

# Lock computer
# Example
# $ lock
lock() {
  if [[ "$unamestr" == 'Linux' ]]; then
    if command_exists 'xscreensaver-command'; then
      xscreensaver-command -lock
    elif command_exists 'i3lock'; then
      i3lock -n -c 000000
    else
      echo 'no lock program found'
    fi
  fi
}

