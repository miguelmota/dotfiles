cointop_sha256() {
  local version=$(curl --silent "https://api.github.com/repos/miguelmota/cointop/releases/latest" | grep -Po --color=never '"tag_name": "\K.*?(?=")')
  local url="https://github.com/miguelmota/cointop/archive/$version.tar.gz"
  echo $url
  wget_sha256 "$url"
}

countdown(){
  if [ -z "$1" ]; then
    echo "time in seconds is required"
    return
  fi
  ts=$(($(date +%s) + $1));
  while [ "$ts" -ge $(date +%s) ]; do
    echo -ne "$(date -u --date @$(($ts - $(date +%s))) +%H:%M:%S)\r"
    sleep 0.1
  done
}

stopwatch() {
  # ctrl-d to stop
  time read
}

stopwatch2() {
  ts=$(date +%s)
  while true; do
    echo -ne "$(date -u --date @$(($(date +%s) - $ts)) +%H:%M:%S)\r"
    sleep 0.1
  done
}

