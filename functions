# Example
# lsblk
# sudo umount /dev/sd/<?><?>
# burn_iso ~/Downloads/linux.iso /dev/sd/<?>
burn_iso() {
  set -eux
  if [ ! -f "$1" ]; then
    echo 'File not found'
    exit 1
  fi

  sudo dd bs=4M if="$1" of="$2" conv=fdatasync status=progress
}

